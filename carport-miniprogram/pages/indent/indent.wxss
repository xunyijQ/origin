.container{
  vertical-align: top; 
  background-color:#f2f2f2;
  width: 99.5%;

}
.swiper-tab{
    margin:10rpx auto;
    width: 100%;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
    border-radius: 10rpx;
    background-color:eee;
    justify-content: space-between;
    border:1px solid #d7d7d7;
}
.swiper-tab-item{
    width: 20%; 
    color:#434343;
    font-size:30rpx;
    
    background-color: #fafafa;
}
.active{  
  color:#1890ff;
  border-bottom: 1px solid #1890ff;
}
.indent-list{
  background-color:white;
  border-radius: 10rpx;
}
.indent-content{
  padding:0 10rpx
}
.item_title{
  font-size:34rpx;
  margin-bottom: 30rpx;
}
.item_content{
  width: 80%;
  height: 100rpx;
  color: #888;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size:28rpx;
}
.indent-box{
  margin-bottom: 20rpx;
}
.item_from{
  width: 360rpx;
  color: #999;
  font-size:28rpx;
}
.item_time{
  text-align: center;
  height:40rpx;
  line-height: 40rpx;
  padding:10rpx 0;
  width: 140rpx;
  font-size:28rpx;
  color: #1890ff;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  border-radius: 10rpx;
  border:1px solid #1890ff;
  z-index: 9999;
}
.hover-class{
  background-color: #A4D3EE;
}
.item_type{
  margin-left: -40rpx;
  color:#849952;
  font-size:28rpx;
}
.item_type1{
  
   margin-left: -40rpx;
  color:#ffa600;
  font-size:28rpx;
}
.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}
navigator{
  z-index: 1
}