.container {
 height:100%;
 }
 .index_head{
   background-color:#f2f2f2;
   width:100%;
   text-align: center;
   height:80rpx;
 }
 .search{
  border-radius: 40rpx;
  background-color: #ffffff;
  margin:0 auto;
  display:inline-block;
  position:relative;
  width:96%;
  top:10rpx;
  vertical-align:middle;
}
.search_arr{
  position:relative;
  margin-left:20rpx;
  font-size:28rpx;
  

}
.search_arr>input{
  color: #ddd6d7;
  text-align: left;
  font-size:22rpxÔºÅimportant;
}
.searchcion{
  width:30rpx;
  height:30rpx;
  position:absolute;
  z-index:9;
  top:50%;
  margin-top:-15rpx;
  left:0rpx;
}
.service_headline{
  padding:0 10px;
}
.service_headline text{
  font-weight: 300;
  font-size:32rpx;
  color:#33324b;
  
}
.recommend_content{
  line-height: 60rpx;
  border-top: 1px solid #f7f7f7;
  border-bottom: 1px solid #f7f7f7;
}
.service-list{
	padding: 0 20rpx;
}
.service-item{
	display: flex;
	padding: 20rpx 20rpx; 
	border-bottom: 1rpx solid #e8e8e8;
}
.service-img{
	width: 220rpx;
	height: 156rpx;
}
.service-item image{
	width: 220rpx;
	height: 156rpx;
}
.service-text{
	flex: 1;
	margin-left: 20rpx;
	width: 100%;
}
.service-text .service-tite{
	color: #333;
	width: 100%;
	font-size: 34rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.service-tags{
	margin: 6rpx 0;
}
.service-tags text{
	padding: 6rpx 16rpx;
	border: 1rpx solid #f7982a;
	line-height: 1;
	color: #f7982a;
	font-size: 28rpx;
	border-radius: 4rpx;
	margin-right: 10rpx;
	margin-bottom: 10rpx;
	white-space: nowrap;
}
.service-city{
	color: #666;
}
.service-coupon{
  font-size: 20rpx;
  text-align: center;
  border:.5rpx solid #999;
  color: #999;
  width:30rpx;
  margin-left:190rpx;
}
.service-btn-choose{
  position: relative;
  background-color: #000;
  color:white;
  width:120rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size:30rpx;
  height:60rpx;
  right:-340rpx;
  top:-40rpx;
  line-height: 60rpx;
}
