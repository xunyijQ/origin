  background:#35BD67;
  height:400rpx;
  position: relative
}
page{background:#fafafa;}
.user{
  margin: auto;  
  height:80rpx;
  width:180rpx;
  position: absolute;  
  top: -300rpx;
  left: 0; 
  bottom: 0; 
  right: 0; 
}
.user-bg{
  width:100%;
  height:200rpx;
  position: absolute;
  bottom: 0;
}
.user-pic{
  width:180rpx;
  height:180rpx;
  border:2px solid #fff;
  border-radius:50%;
}
.user-name{
  color:#fff;
  text-align: center;
  position: absolute;
  left:0;
  top:200rpx;
  right:0;
  font-size:40rpx;
}
.platform-vip{
  width:100%;
  background:#FFF;
  height:90rpx;
  margin:10rpx auto 15px;
  padding:5px 0px;
}
.platform-vip .text{line-height:1em;}
.text-l{
  float:left;
  display: flex;
  align-items: center;
}
.text-r{
  float:right;
}
.vip-icon{
  width:40rpx;
  height:40rpx;
  padding-right:15rpx;
