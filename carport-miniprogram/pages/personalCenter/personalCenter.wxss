.platform-box{
  width:100%;
  background:#FFF;
  box-sizing: content-box;
}
.platform-share{
  padding-bottom: 1px;
  margin:0 25rpx;
  border-bottom: 1px solid #eee;
}
.buyvip .text-l,.platform-share .text-l{width:80%;}
.platform-share .text-l{line-height:80rpx;}
.skip_ico{padding:29rpx 10rpx;width:16rpx;height:24rpx;}
.skip_ico image{width:16rpx;height:24rpx;vertical-align:top;}
.clearfix:after{
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
